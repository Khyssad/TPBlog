{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Tous les articles</h1>
    
    <div class="row">
        {% for article in pagination %}
            <div class="col-md-4 mb-4">
                {% include 'partials/_article_card.html.twig' with {'article': article} %}
            </div>
        {% else %}
            <p class="text-center">Aucun article disponible pour le moment.</p>
        {% endfor %}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

      <div class="newsletter bg-light p-4 rounded mb-4">
