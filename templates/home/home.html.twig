{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur notre blog{% endblock %}

{% block body %}
    <h1 class="text-center mb-4">Bienvenue sur notre blog</h1>
    
    <div class="row mb-4">
        {% for article in articles %}
            <div class="col-md-4 mb-4">
                {% include 'partials/_article_card.html.twig' with {'article': article} %}
            </div>
        {% endfor %}
    </div>
    
    <div class="text-center mb-4">
        <a href="{{ path('app_article_index') }}" class="btn btn-primary">Voir tous les articles</a>
    </div>
    
    <div class="newsletter bg-light p-4 rounded mb-4">
        <h2 class="h4 mb-3">Inscrivez-vous Ã  notre newsletter</h2>
        <form action="#" method="post" class="d-flex">
            <input type="email" name="email" placeholder="Votre email" class="form-control me-2" required>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        </form>
    </div>
    
    <div class="cta text-center">
        <a href="#" class="btn btn-outline-primary">Devenir membre premium</a>
    </div>
{% endblock %}